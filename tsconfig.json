{
	"compilerOptions": {
		"typeRoots" : ["node_modules/@types", "src/typings"],
		"target": "es5",
		"module": "commonjs",
		"lib": ["es5", "es6", "esnext"],
		"allowJs": true,
		"checkJs": true,
		"sourceMap": true,
		"outDir": "./dist/",
		"removeComments": true,
		"downlevelIteration": true,
		"skipLibCheck": true,

		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,

		"baseUrl": ".",
		"paths": {
			"Test": ["test"],
		},
	},
	"include": ["src/**/*"],
	"exclude": ["src/**/__tests__"]
}
