{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es5", "es6"],
		"allowJs": true,
		"checkJs": true,
		"sourceMap": true,
		"outDir": "./dist/",
		"removeComments": true,
		"downlevelIteration": true,

		"strict": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitAny": true,
		"noImplicitThis": true,

		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,

		"sourceMap": true,
	},
	"include": [
		"./src"
	]
}
