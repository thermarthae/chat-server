{
	"name": "chat-server",
	"version": "0.0.0",
	"license": "MIT",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/thermarthae/chat-server.git"
	},
	"scripts": {
		"start": "yarn run development",
		"production": "set NODE_ENV=production&& node dist/index.js",
		"development": "set NODE_ENV=development&& tsnd --pretty --no-deps --respawn src/index.ts",
		"docker-build": "yarn run build && docker image build -t chat-server .",
		"docker-compose-up-dev": "docker-compose -f docker-compose.dev.yml up",
		"docker-development": "tsnd --pretty --no-deps --respawn --poll --interval 5000 src/index.ts",
		"test": "jest",
		"clear": "rimraf dist",
		"build": "yarn run clear && tsc",
		"watch": "tsc -w"
	},
	"dependencies": {
		"apollo-server-express": "^2.4.2",
		"cachegoose": "^8.0.0",
		"connect-mongo": "^2.0.3",
		"cookie": "^0.4.0",
		"cookie-parser": "^1.4.3",
		"dataloader": "^1.4.0",
		"dotenv": "^8.0.0",
		"express": "^4.16.3",
		"express-session": "^1.16.0",
		"glob": "^7.1.4",
		"graphql": "^14.1.1",
		"graphql-iso-date": "^3.6.1",
		"graphql-redis-subscriptions": "^2.1.0",
		"graphql-subscriptions": "^1.0.0",
		"ioredis": "^4.9.5",
		"mongoose": "^5.4.8",
		"morgan": "^1.9.1",
		"multer": "^1.3.1",
		"passport": "^0.4.0",
		"passport-local": "^1.0.0",
		"passport-local-mongoose": "^5.0.1",
		"source-map-support": "^0.5.11"
	},
	"devDependencies": {
		"@types/connect-mongo": "^0.0.42",
		"@types/cookie": "^0.3.2",
		"@types/cookie-parser": "^1.4.1",
		"@types/dotenv": "^6.1.0",
		"@types/express": "^4.16.0",
		"@types/express-session": "^1.15.11",
		"@types/faker": "^4.1.5",
		"@types/glob": "^7.1.1",
		"@types/graphql": "^14.0.5",
		"@types/graphql-iso-date": "^3.3.1",
		"@types/ioredis": "^4.0.11",
		"@types/jest": "^24.0.11",
		"@types/mongodb-memory-server": "^1.8.0",
		"@types/mongoose": "^5.3.26",
		"@types/morgan": "^1.7.35",
		"@types/multer": "^1.3.7",
		"@types/node": "^12.0.0",
		"@types/passport": "^1.0.0",
		"@types/passport-local": "^1.0.33",
		"@types/source-map-support": "^0.5.0",
		"faker": "^4.1.0",
		"jest": "^24.5.0",
		"mongodb-memory-server": "^5.0.2",
		"rimraf": "^2.6.3",
		"ts-jest": "^24.0.0",
		"ts-node-dev": "^1.0.0-pre.39",
		"tslint": "^5.15.0",
		"typescript": "^3.4.5"
	}
}
